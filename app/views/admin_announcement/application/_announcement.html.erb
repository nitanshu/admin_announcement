<div class="announcement_panel announcement_<%= user_announcement.id %>" style="background: <%= user_announcement.background_color %>; width: 100%; position: relative; float: left; clear: both; padding: 10px 10px; text-align: <%= user_announcement.text_align %>; font-size: <%= user_announcement.font_size %>; z-index: <%= user_announcement.z_index %>; line-height: normal;">
  <p style="margin: 0px; padding: 0px; line-height: normal; color: <%= user_announcement.font_color%>;"><%= user_announcement.message.html_safe %></p>

  <div style="position: absolute; top: 8px; color: #ffffff; font-size: 14px; right: 15px; z-index: 101;"><%= link_to 'X', admin_announcement.hide_announcement_path(user_announcement), method: :post, remote: true, title: 'X', class: 'cross_button', style: "color: #{user_announcement.cross_button_color};" %></div>
</div>

